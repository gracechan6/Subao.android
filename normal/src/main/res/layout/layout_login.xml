<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/login_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_icon"
        android:background="#3a3c51">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号"
            android:padding="15dp"
            android:layout_marginLeft="25dp"
            android:textSize="20dp"
            android:textColor="#9c9eb8"/>
        <EditText
            android:id="@+id/et_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_username"
            android:layout_marginLeft="25dp"
            android:paddingLeft="80dp"
            android:textSize="20dp"
            android:singleLine="true"
            android:hint="请输入账号" />
        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:padding="15dp"
            android:layout_marginLeft="25dp"
            android:textSize="20dp"
            android:layout_below="@+id/tv_username"
            android:textColor="#9c9eb8"/>
        <EditText
            android:id="@+id/et_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_username"
            android:layout_alignBaseline="@+id/tv_password"
            android:layout_marginLeft="25dp"
            android:paddingLeft="80dp"
            android:textSize="20dp"
            android:singleLine="true"
            android:hint="请输入密码" />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_layout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_button"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:text="登  录"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tv_forget_passwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="忘记密码"
        android:layout_marginLeft="25dp"
        android:textSize="20dp"
        android:textColor="#9c9eb8" />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_forget_passwd"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="注册"
        android:layout_marginLeft="25dp"
        android:textSize="20dp"
        android:textColor="#9c9eb8" />
</RelativeLayout>