<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TabItemView">
        <!-- item text -->
        <attr name="itemText_" format="string"/>
        <!-- item image -->
        <attr name="itemIcon_" format="reference"/>
        <!-- item drawable paddings -->
        <attr name="itemDrawablePadding_" format="dimension"></attr>

        <!-- item text color -->
        <attr name="itemTextColor_" format="color"/>

        <!-- item paddings -->
        <attr name="itemPadding_" format="dimension"/>
        <attr name="itemPaddingLeft_" format="dimension"></attr>
        <attr name="itemPaddingTop_" format="dimension"></attr>
        <attr name="itemPaddingRight_" format="dimension"></attr>
        <attr name="itemPaddingBottom_" format="dimension"></attr>

        <!-- badger value -->
        <attr name="badgerValue_" format="integer"/>
        <!-- badger background -->
        <attr name="badgerBackground_" format="reference"/>
        <!-- badger width -->
        <attr name="badgerWidth_" format="dimension"/>
        <!-- badger height -->
        <attr name="badgerHeight_" format="dimension"/>
        <!-- show badger -->
        <attr name="showBadger_" format="boolean"/>
        <!-- badger text color -->
        <attr name="badgerTextColor_" format="color"/>
        <!-- badger text size -->
        <attr name="badgerTextSize_" format="dimension"/>
        <!-- badger magin -->
        <attr name="badgerMargin_" format="dimension|reference"/>
        <attr name="badgerMarginTop_" format="dimension|reference"/>
        <attr name="badgerMarginLeft_" format="dimension|reference"/>
        <attr name="badgerMarginRight_" format="dimension|reference"/>
        <attr name="badgerMarginBottom_" format="dimension|reference"/>

    </declare-styleable>
</resources>